<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" alignment="CENTER" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets bottom="5" left="15" right="5" top="5" />
      </padding>
      <HBox spacing="5">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" styleClass="cell_big_label" text="\$first" wrapText="true" />
      </HBox>
      <FlowPane fx:id="tags" />
      <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" wrapText="true" />
      <Label fx:id="address" styleClass="cell_small_label" text="\$address" wrapText="true" />
      <Label fx:id="email" styleClass="cell_small_label" text="\$email" wrapText="true" />
      <Label fx:id="remark" styleClass="cell_remark_label" text="\$remark" wrapText="true" />
      <Label fx:id="grade" styleClass="cell_grade_label" text="\$grade" wrapText="true" />
    </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
  </GridPane>
    <VBox alignment="TOP_CENTER" prefHeight="112.0" prefWidth="300.0">
      <VBox fx:id="classNameBox" alignment="CENTER_RIGHT" prefHeight="20.0" prefWidth="300">
         <children>
           <Label fx:id="className" styleClass="cell_class_label" text="\$class" wrapText="true" />
         </children>
      </VBox>
      <VBox alignment="CENTER" prefHeight="112.0" prefWidth="300">
         <children>
            <HBox alignment="CENTER_RIGHT">
               <children>
                  <VBox alignment="CENTER" prefHeight="34.0" prefWidth="100.0">
                     <children>
                          <Label styleClass="cell_present_label" text="Present" />
                          <CheckBox fx:id="checkBox" alignment="CENTER" mnemonicParsing="false" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
    </VBox>
</HBox>
